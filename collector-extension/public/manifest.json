{
    "name": "Brave Research Participation Tool",
    "version": "0.1.14",
    "description": "Brave Research Participation Tool",
    "permissions": [
        "tabs",
        "webNavigation",
        "history",
        "storage",
        "alarms",
        "unlimitedStorage",
        "https://user-studies.brave.com/*"
    ],
    "options_page": "./options.html",
	"background": {
		"scripts": [
            "./background.js"
		],
		"persistent": false
    },
    "browser_action": {
        "default_popup": "./popup.html",
        "default_icon": {
            "16": "./img/brave_survey_ext_toolbar_icon@1x.png",
            "32": "./img/brave_survey_ext_toolbar_icon@2x.png",
            "48": "./img/brave_survey_ext_toolbar_icon@3x.png"
          }
    },
    "icons": {
    "16": "./img/brave_survey_ext_toolbar_icon@1x.png",
    "32": "./img/brave_survey_ext_toolbar_icon@2x.png",
    "48": "./img/brave_survey_ext_toolbar_icon@3x.png"
    },
    "manifest_version": 2
}